<%= form_for ([user, friend]), html: {:id => "friend-form"} do |f| %>
    <div class="form-group">
    <%= f.label :name %>
    
    <%= f.text_field :name, class: "form-control" %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <%= f.submit :class => 'btn btn-info'%>
  
<%end%>