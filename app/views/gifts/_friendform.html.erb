<%= form_for ([user, friend, gift]), html: {:id => "gift-form"} do |f| %>
    <div class="form-group">
    <%= f.label :name %>:
    <%= f.text_field :name, class: "form-control" %>
    <%= f.label :link %>:
    <%= f.url_field :link, class: "form-control" %>
    <%= f.label :price %>:
    <%= f.number_field :price, min: 0.01, max: 999999.99, step: 0.01 %><br>
    Gift for <%=@friend.name%>
    <%= f.collection_check_boxes(:friend_ids, @user.friends.find_all{|p| p!=@friend}, :id, :name) %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    
    <%= f.submit%>
  
<%end%>