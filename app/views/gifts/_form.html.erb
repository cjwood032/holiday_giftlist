<%= form_for ([user, gift]), html: {:id => "gift-form"} do |f| %>
    <div class="form-group">
    <%= f.label :name %>:
    <%= f.text_field :name, class: "form-control" %>
    <%= f.label :link %>:
    <%= f.url_field :link, class: "form-control" %>
    <%= f.label :price %>:
    <%= f.number_field :price, min: 1.00, max: 999999, step: 1.00 %><br>
    Gift for 
    <%= f.collection_check_boxes(:friend_ids, @user.friends, :id, :name) %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    
    <%= f.submit%>
  
<%end%>